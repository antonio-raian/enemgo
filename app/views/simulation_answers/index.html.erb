<p id="notice"><%= notice %></p>

<h1>Simulation Answers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Simulation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @simulation_answers.each do |simulation_answer| %>
      <tr>
        <td><%= simulation_answer.user %></td>
        <td><%= simulation_answer.simulation %></td>
        <td><%= link_to 'Show', simulation_answer %></td>
        <td><%= link_to 'Edit', edit_simulation_answer_path(simulation_answer) %></td>
        <td><%= link_to 'Destroy', simulation_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Simulation Answer', new_simulation_answer_path %>
